                    <th>รายการอุปกรณ์</th>
                    <th>จำนวนที่ยืม</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each borrow as |borrow|}}
                    <tr>
                      <td>{{incrementIndex @index}}</td>
                      {{#with borrow.equipment as |equipment|}}
                        <td>{{equipment.equipname}} </td>
                      {{/with}}
                      <td>{{borrow.amount_borrowed}}</td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
